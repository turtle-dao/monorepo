{
  "name": "@turtledev/react",
  "type": "module",
  "version": "1.2.0",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rm -rf dist && bun run build:code && bun run build:types",
    "build:code": "rollup -c --bundleConfigAsCjs",
    "build:types": "tsc -p .",
    "dev": "concurrently \"bun run dev:code\" \"bun run dev:types\"",
    "dev:code": "rollup -w -c --bundleConfigAsCjs",
    "dev:types": "tsc -p . --watch",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.0",
    "@tanstack/query-sync-storage-persister": "^5.74.9",
    "@tanstack/react-query": "^5.74.11",
    "@tanstack/react-query-persist-client": "^5.74.11",
    "@turtledev/api": "workspace:1.2.0",
    "@vanilla-extract/css": "^1.17.1",
    "@vanilla-extract/dynamic": "^2.1.2",
    "@vanilla-extract/recipes": "^0.5.5",
    "react": "^19.1.0",
    "ts-pattern": "^5.7.0",
    "wouter": "^3.7.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.0",
    "@vanilla-extract/rollup-plugin": "^1.3.14",
    "autoprefixer": "^10.4.21",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.2.1",
    "browserslist": "^4.24.4",
    "concurrently": "^9.1.2",
    "globals": "^15.15.0",
    "lightningcss": "^1.29.3",
    "rollup": "^4.40.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
