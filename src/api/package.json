{
  "name": "@turtledev/api",
  "type": "module",
  "version": "1.4.0",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rm -rf dist && rm -rf types && bun run build:code && bun run build:types",
    "build:code": "rollup -c --bundleConfigAsCjs",
    "build:types": "tsc -p .",
    "dev": "concurrently \"bun run dev:code\" \"bun run dev:types\"",
    "dev:code": "rollup -w -c --bundleConfigAsCjs",
    "dev:types": "tsc -p . --watch",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "viem": "^2.30.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "concurrently": "^9.1.2",
    "globals": "^15.15.0",
    "rollup": "^4.41.0",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
