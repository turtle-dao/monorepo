{
  "name": "@turtledev/api",
  "type": "module",
  "version": "1.2.0",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "rm -rf dist && rm -rf types && bun run build:code && bun run build:types",
    "build:code": "rollup -c --bundleConfigAsCjs",
    "build:types": "tsc -p .",
    "dev": "concurrently \"bun run dev:code\" \"bun run dev:types\"",
    "dev:code": "rollup -w -c --bundleConfigAsCjs",
    "dev:types": "tsc -p . --watch",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "concurrently": "^9.1.2",
    "globals": "^15.14.0",
    "rollup": "^4.30.1",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
